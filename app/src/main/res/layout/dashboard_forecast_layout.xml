<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewState"
            type="com.beyzaakkuzu.weather.ui.dashboard.CurrentWeatherViewState" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:backgroundTint="@{viewState.data.getColor()}"
        android:fitsSystemWindows="true"
        android:visibility="@{viewState.isLoading() ? View.INVISIBLE : View.VISIBLE}"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        tools:visibility="invisible">

        <RelativeLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCalendartoday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTemperature"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="-166dp"
                android:layout_marginEnd="120dp"
                android:backgroundTint="#0D47A1"
                android:text="Saturday,11 Sept"
                android:textColor="#9B9EAD"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/imageViewWeatherIcon"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                app:setWeatherIcon="@{viewState.data.getCurrentWeather().icon}"
                tools:src="@drawable/bulutlu2" />

            <TextView
                android:id="@+id/textViewTemperature"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="40dp"
                android:text="@{viewState.data.main.getTempString()}"
                android:textColor="@color/white"
                android:textSize="100sp"
                tools:text="25Â°" />

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="30dp"
                android:background="#303F9F"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:id="@+id/textViewWeatherMain"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="14dp"
                    android:text="Feels"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="Clouds &amp; Sun" />

                <TextView
                    android:id="@+id/tVWind"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="0dp"
                    android:text="Wind"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="Clouds &amp; Sun" />
            </GridLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/grid"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:background="#636161" />

            <ImageView
                android:id="@+id/precipitationimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/view"
                android:layout_alignStart="@+id/imageViewWeatherIcon"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/precipitationtV"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@+id/view"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/precipitationimg"
                android:text="Precipitation: @{}"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:text="Clouds &amp; Sun" />

            <ImageView
                android:id="@+id/windimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/precipitationimg"
                android:layout_alignStart="@+id/imageViewWeatherIcon"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sunny_day" />

            <TextView
                android:id="@+id/windTv"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@+id/precipitationtV"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/precipitationimg"
                android:text="Wind: @{}"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:text="Clouds &amp; Sun" />

            <ImageView
                android:id="@+id/humidityimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/view"
                android:layout_marginStart="34dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/precipitationtV" />

            <TextView
                android:id="@+id/humidityTv"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@+id/view"
                android:layout_alignBottom="@+id/humidityimg"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/humidityimg"
                android:text="Humidity: @{}"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:text="Clouds &amp; Sun" />

            <ImageView
                android:id="@+id/sunsetimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/humidityimg"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/windTv" />

            <TextView
                android:id="@+id/sunsetTv"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/humidityTv"
                android:layout_alignEnd="@+id/humidityTv"
                android:layout_alignBottom="@+id/humidityimg"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="-38dp"
                android:layout_toEndOf="@+id/sunsetimg"
                android:text="Sunset: @{}"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:text="Clouds &amp; Sun" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>