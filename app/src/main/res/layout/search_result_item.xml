<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.beyzaakkuzu.weather.ui.search.result.SearchResultItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rootView"
        >

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@{viewModel.item.getFullName()}"
            android:textColor="@color/black"
            android:textSize="21sp"
            tools:text="Ankara,Turkey" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvCityName"
            android:layout_marginBottom="8dp"
            android:background="@color/mainTextColor"/>
    </RelativeLayout>
</layout>