<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.beyzaakkuzu.weather.ui.dashboard.forecast.ForecastItemViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="white">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewTv"
            android:layout_width="1000dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="@{String.format(@string/cardView, viewModel.item.getDay())}"
            tools:backgroundTint="#161C5E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/path"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17dp"
                    android:alpha="0.5"
                    android:background="@drawable/path" />

                <TextView
                    android:id="@+id/textViewDayOfWeek"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="252dp"
                    android:text="@{viewModel.item.getDay()}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:transitionName="@{String.format(@string/dayOfWeek, viewModel.item.getDay())}"
                    tools:text="Monday" />

                <ImageView
                    android:id="@+id/textViewTemp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="-210dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/textViewDayOfWeek"
                    android:transitionName="@{String.format(@string/forecastIcon, viewModel.item.getDay())}"
                    app:setWeatherIcon="@{viewModel.item.getWeatherItem().icon}"
                    tools:src="@drawable/ic_splash_big_cloud" />

                <LinearLayout
                    android:id="@+id/linearLayoutTempMaxMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="97dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textViewTemp"
                    android:orientation="horizontal"
                    android:transitionName="@{String.format(@string/tempMaxMin, viewModel.item.getDay())}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@{viewModel.item.main.getTempMinString()}"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="24°" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@{viewModel.item.main.getTempMaxString()}"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="56°" />
                </LinearLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewTv"
            android:id="@+id/daysClickId"
            android:layout_marginVertical="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerdayshour"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#161C5E"
                android:orientation="horizontal"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/forecast_item" />
        </RelativeLayout>
    </RelativeLayout>
</layout>